<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Celebrity Instagram Profiles</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" crossorigin="anonymous" referrerpolicy="no-referrer"/>

  <style>
    body {
      background: linear-gradient(to bottom right, #c7d2fe, #e9d5ff, #fbcfe8);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 30px;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(10px);
      border-radius: 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      padding: 40px;
      width: 100%;
      max-width: 1000px;
      text-align: center;
    }

    h1 {
      font-weight: 700;
      font-size: 2rem;
      color: #333;
      margin-bottom: 30px;
    }

    .table-responsive {
      border-radius: 1rem;
      overflow: hidden;
    }

    .table th, .table td {
      vertical-align: middle;
    }

    .btn-custom {
      padding: 12px 20px;
      font-size: 1rem;
      border-radius: 50px;
      font-weight: 600;
    }

    .ig-icon {
      color: #e1306c;
    }

    @media (max-width: 576px) {
      h1 {
        font-size: 1.5rem;
      }
      .btn-custom {
        padding: 10px 16px;
        font-size: 0.95rem;
      }
    }
  </style>
</head>
<body>

  <div class="glass-card">

    <h1>Celebrity Instagram Profiles</h1>

    <% if (result && result.length) { %>
      <div class="table-responsive shadow-sm mb-4">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Instagram</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach(item => { %>
              <tr>
                <td><%= item.Name %></td>
                <td>
                  <a href="https://instagram.com/<%= item.Username %>" target="_blank" class="text-decoration-none">
                    <i class="fa-brands fa-instagram ig-icon me-2"></i>@<%= item.Username %>
                  </a>
                </td>
                <td class="text-center">
                  <a href="/instagram/<%= item.Username %>" class="btn btn-outline-dark btn-sm d-flex align-items-center justify-content-center rounded-pill px-3 py-2">
                    <i class="fa-solid fa-eye me-2"></i> View Profile
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        No celebrity data found.
      </div>
    <% } %>

    <div class="mt-3">
      <a href="/" class="btn btn-light btn-custom">
        <i class="fa-solid fa-home me-2"></i> Home
      </a>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
