<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Celebrity Instagram Profiles</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet"
        crossorigin="anonymous" referrerpolicy="no-referrer" />

  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    .ig-icon {
      color: #e1306c;
    }
    .username-link i {
      margin-right: 6px;
    }
    .table-responsive {
      border: 1px solid rgba(0, 0, 0, 0.05);
      border-radius: 0.5rem;
      background-color: #fff;
    }
    .table-striped > tbody > tr:nth-of-type(odd) {
      background-color: #f2f4f7;
    }
    .btn-group .btn {
      min-width: 120px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mb-4 text-center">Celebrity Instagram Profiles</h1>

    <% if (result && result.length) { %>
      <div class="table-responsive shadow-sm mb-3">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Instagram</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach(item => { %>
              <tr>
                <td><%= item.Name %></td>
                <td>
                  <a href="https://instagram.com/<%= item.Username %>" target="_blank"
                     class="text-decoration-none username-link">
                    <i class="fa-brands fa-instagram ig-icon"></i>@<%= item.Username %>
                  </a>
                </td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/instagram/<%= item.Username %>"
                       class="btn btn-outline-dark btn-sm d-flex align-items-center">
                      <i class="fa-solid fa-eye me-2"></i>
                      View Profile
                    </a>
                    <!-- <button type="button" class="btn btn-outline-secondary btn-sm">
                      <i class="fa-solid fa-pencil-alt"></i>
                    </button> -->
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center">
        No celebrity data found.
      </div>
    <% } %>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-outline-dark">
        <i class="fa-solid fa-home me-2"></i>Home
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>