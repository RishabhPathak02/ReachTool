<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Celebrity Instagram Profiles</title>

    <!-- Bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <style>
      .ig-icon {
        color: #e1306c;
      }
      .username-link i {
        margin-right: 6px;
      }
    </style>
  </head>
  <body class="bg-light py-5">
    <div class="container">
      <h1 class="mb-4 text-center">Celebrity Instagram Profiles</h1>

      <% if (result && result.length) { %>
      <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Instagram</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach((item, index) => { %>
            <tr>
              <td><%= item.Name %></td>
              <td>
                <a
                  href="https://instagram.com/<%= item.Username %>"
                  target="_blank"
                  class="username-link text-decoration-none"
                >
                  <i class="fa-brands fa-instagram ig-icon"></i>
                  @<%= item.Username %>
                </a>
              </td>
              <td>
                <div class="btn-group">
                  <a
                    href="/instagram/<%= item.Username %>"
                    class="btn btn-outline-dark btn-sm d-flex align-items-center"
                  >
                    <i class="fa-solid fa-eye me-2"></i>
                    Fetch Account
                  </a>

                  <a href="" class="btn btn-secondary btn-sm">
                    <i class="fa-solid fa-pencil-alt"></i>
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center">No celebrity data found.</div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
