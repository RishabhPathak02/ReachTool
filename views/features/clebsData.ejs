<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Celebrity Instagram Profiles</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" crossorigin="anonymous" referrerpolicy="no-referrer"/>

  <style>
    body {
      background: linear-gradient(to bottom right, #c7d2fe, #e9d5ff, #fbcfe8);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(10px);
      border-radius: 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      padding: 30px;
      width: 100%;
      max-width: 1100px;
    }

    h1 {
      font-weight: 700;
      font-size: 2rem;
      color: #333;
      margin-bottom: 0;
      text-align: center;
    }

    .btn-custom {
      padding: 12px 20px;
      font-size: 1rem;
      border-radius: 50px;
      font-weight: 600;
    }

    .ig-icon {
      color: #e1306c;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 1.6rem;
      }
      .btn-custom {
        padding: 10px 16px;
        font-size: 0.95rem;
      }
      .btn-sm {
        padding: 6px 10px;
        font-size: 0.85rem;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 1.4rem;
      }
      .btn-custom {
        padding: 8px 12px;
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body>

  <div class="glass-card">

    <!-- Buttons and Heading Row -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
      <a href="/" class="btn btn-dark btn-custom">
        <i class="fa-solid fa-home me-2"></i> Home
      </a>

      <h1 class="mb-0">Instagram Profiles</h1>

      <a href="/download/csv" class="btn btn-dark btn-custom">
        <i class="fa-solid fa-download me-2"></i> Download CSV
      </a>
    </div>

    <% if (result && result.length) { %>
      <div class="table-responsive shadow-sm mb-4">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Instagram</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach(item => { %>
              <tr>
                <td><%= item.Name %></td>
                <td>
                  <% if(item.Username) { %>
                    <a href="https://instagram.com/<%= item.Username %>" target="_blank" class="text-decoration-none">
                      <i class="fa-brands fa-instagram ig-icon me-2"></i>@<%= item.Username %>
                    </a>
                  <% } else { %>
                    <span class="text-muted">No Username</span>
                  <% } %>
                </td>
                <td class="text-center">
                  <% if(item.Username) { %>
                    <a href="/instagram/<%= item.Username %>" class="btn btn-outline-dark btn-sm d-flex align-items-center justify-content-center rounded-pill px-3 py-2">
                      <i class="fa-solid fa-eye me-2"></i> View
                    </a>
                  <% } else { %>
                    <span class="text-muted">N/A</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center">
        No celebrity data found.
      </div>
    <% } %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
