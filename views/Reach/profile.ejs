<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= username %>‚Äôs Instagram Stats</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
  <style>
    /* Global & Body */
    body {
      margin: 0;
      font-family: "Segoe UI", Franklin Gothic Medium, "Arial Narrow", Arial,
        sans-serif;
      background: linear-gradient(135deg, #e0eafc, #cfdef3);
      display: grid;
      place-items: center;
      min-height: 100vh;
      text-align: center;
    }
    /* Card */
    .profile-card {
      background: #fff;
      border-radius: 16px;
      border: 1px solid rgba(193, 77, 66, 0.3);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      max-width: 500px;
      width: 100%;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      padding-bottom: 1rem;
    }
    .profile-card:hover {
      transform: scale(1.02);
      box-shadow: 0 12px 36px rgba(0, 0, 0, 0.15);
    }
    .card-header {
      background: #6f42c1;
      padding: 20px;
    }
    .username-link {
      color: #fff;
      font-size: 1.5rem;
      font-weight: bold;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    .username-link:hover {
      color: #e0e0e0;
    }
    /* Stats */
    .stats {
      padding: 16px;
      margin-bottom: 1rem;
    }
    .stat {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #f8f9fa;
      border-radius: 12px;
      margin: 8px 0;
      padding: 12px 16px;
      transition: background 0.3s, transform 0.2s;
    }
    .stat:hover {
      background: #e7eef6;
      transform: translateX(4px);
    }
    .stat-left {
      display: flex;
      align-items: center;
    }
    .stat-left i {
      font-size: 1.3rem;
      margin-right: 10px;
      color: #495057;
    }
    .stat-left span {
      font-weight: 600;
      color: #343a40;
    }
    .stat-value {
      font-size: 1.25rem;
      font-weight: 700;
      color: #212529;
    }
    /* Button */
    .btn-check {
      background: #6f42c1;
      color: white;
      transition: background 0.3s ease;
    }
    .btn-check:hover {
      background: #4e2a96;
      color: #fff;
    }
  </style>
</head>
<body>
  <div class="profile-card">
    <div class="card-header">
      <a
        href="https://instagram.com/<%= username %>"
        target="_blank"
        class="username-link"
      >
        <i class="fab fa-instagram me-2 "></i>@<%= username %>
      </a>
    </div>

    <div class="stats">
      <% const statList = [
           { icon: 'fa-user-friends', title: 'Followers', value: followers },
           { icon: 'fa-clone', title: 'Total Posts', value: mediaCount },
           { icon: 'fa-bolt', title: 'Engagement Rate', value: engagement + '%' },
           { icon: 'fa-heart', title: 'Average Likes', value: avgLikes },
           { icon: 'fa-comment', title: 'Average Comments', value: avgComments },
           { icon: 'fa-chart-line', title: 'Average Reach', value: avgReach }
         ];
      %>
      <% statList.forEach(stat => { %>
        <div class="stat">
          <div class="stat-left">
            <i class="fas <%= stat.icon %>"></i>
            <span><%= stat.title %></span>
          </div>
          <div class="stat-value"><%= stat.value %></div>
        </div>
      <% }) %>
    </div>

    <a href="/feature/celebrities" class="btn btn-outline-dark">üîç Check Another Profile</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
